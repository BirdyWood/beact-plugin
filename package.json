{
  "name": "beact-plugin",
  "displayName": "Beact",
  "description": "Support BML (Beact Markup Language) for VSCode",
  "version": "0.0.1",
  "publisher": "BirdyWood",
  "author": {
    "name": "BirdyWood"
  },
  "license": "MIT",
  "homepage": "https://github.com/BirdyWood/beact-plugin",
  "repository": {
    "type": "git",
    "url": "https://github.com/BirdyWood/beact-plugin"
  },
  "bugs": {
    "url": "https://github.com/BirdyWood/beact-plugin/issues"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#383b2b",
    "theme": "dark"
  },
  "keywords": [
    "beact"
  ],
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*.bml"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "beact-plugin.enable",
        "title": "Enable/Disable Beact"
      }
    ],
    "languages": [{
      "id": "beact",
      "aliases": ["Beact", "beact"],
      "extensions": [".bml"],
      "configuration": "./language/language-configuration.json"
    }],
    "grammars": [{
      "language": "beact",
      "scopeName": "source.beact",
      "path": "./language/syntaxes/beact.tmLanguage.json"
    }]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "eslint": "^9.13.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}